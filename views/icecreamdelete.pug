extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let icecreamid = toShow._id
    - let icecreamcone = toShow.cone
    - let icecreamflavour = toShow.flavour
    - let icecreamnumOfScoops = toShow.numOfScoops
    - let actionid = "/resource/icecream/" + icecreamid
    script let actionid = "#{actionid}"
    div
      div.row
        div(class='icecreamAttr mr-3') Icecream ID is:
        div #{icecreamid}
      div.row
        div(class='icecreamAttr mr-3') Icecream cone is:
        div #{icecreamcone}
      div.row
        div(class='icecreamAttr mr-3') Icecream Flavour is:
        div #{icecreamflavour}
      div.row
        div(class='icecreamAttr mr-3') Icecream Num Of Scoops is:
        div #{icecreamnumOfScoops}
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
  script.
    function cancel() {
      // Go back to the home page for the icecream collection
      window.location.href='/icecream'
    }
  script.
    function deleteOnid() {
      console.log("starting delete")
      // delete first
      fetch(actionid, {
        method: 'DELETE'  // Dont need a body for the delete
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Delete succeded")
        window.location.href='/icecream'
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Delete failed " + error )
      });
    }